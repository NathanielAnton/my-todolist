{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
    
    <div class="mb-3">
        {{ form_label(form.task, 'Tâche *', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.task, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom de votre tâche'}}) }}
        <div class="form-text">Le nom principal de votre tâche</div>
        {{ form_errors(form.task) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Décrivez votre tâche (optionnel)'}}) }}
        <div class="form-text">Description détaillée de la tâche</div>
        {{ form_errors(form.description) }}
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            {{ form_label(form.dueDate, 'Date d\'échéance', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.dueDate, {'attr': {'class': 'form-control'}}) }}
            <div class="form-text">Date limite pour cette tâche</div>
            {{ form_errors(form.dueDate) }}
        </div>

        <div class="col-md-3 mb-3">
            {{ form_label(form.priority, 'Priorité', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.priority, {'attr': {'class': 'form-control'}}) }}
            <div class="form-text">1 = Basse, 5 = Haute</div>
            {{ form_errors(form.priority) }}
        </div>

        <div class="col-md-3 mb-3">
            <div class="form-check form-switch mt-4">
                {{ form_widget(form.isCompleted, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(form.isCompleted, 'Terminée', {'label_attr': {'class': 'form-check-label'}}) }}
            </div>
            {{ form_errors(form.isCompleted) }}
        </div>
    </div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> {{ button_label|default('Créer la tâche') }}
        </button>
        <a href="{{ path('app_todo_index') }}" class="btn btn-secondary">
            <i class="fas fa-times"></i> Annuler
        </a>
    </div>

{{ form_end(form) }}