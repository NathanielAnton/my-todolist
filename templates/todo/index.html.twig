{% extends 'base.html.twig' %}

{% block title %}Mes Tâches - Ma Todo List{% endblock %}

{% block body %}
<div class="todo-container">
    <div class="todo-card">
        <!-- En-tête de page -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1><i class="fas fa-tasks"></i> Mes Tâches</h1>
                <p class="text-muted mb-0">Gérez toutes vos tâches en un seul endroit</p>
            </div>
            <a href="{{ path('app_todo_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nouvelle tâche
            </a>
        </div>

       <!-- Filtres et statistiques -->
        <div class="row mb-4">
            <div class="col-md-8">
                <div class="d-flex gap-2 flex-wrap">
                    <a href="{{ path('app_todo_index') }}" 
                       class="btn btn-{{ current_filter is null ? 'primary' : 'outline-primary' }} btn-sm">
                        <i class="fas fa-list"></i> Toutes
                    </a>
                    <a href="{{ path('app_todo_index', {'filter': 'pending'}) }}" 
                       class="btn btn-{{ current_filter == 'pending' ? 'warning' : 'outline-warning' }} btn-sm">
                        <i class="fas fa-clock"></i> En cours
                    </a>
                    <a href="{{ path('app_todo_index', {'filter': 'completed'}) }}" 
                       class="btn btn-{{ current_filter == 'completed' ? 'success' : 'outline-success' }} btn-sm">
                        <i class="fas fa-check"></i> Terminées
                    </a>
                    <a href="{{ path('app_todo_index', {'filter': 'high'}) }}" 
                       class="btn btn-{{ current_filter == 'high' ? 'danger' : 'outline-danger' }} btn-sm">
                        <i class="fas fa-exclamation-circle"></i> Haute priorité
                    </a>
                </div>
            </div>
            <div class="col-md-4 text-end">
                <span class="badge bg-primary">
                    {{ todos|length }} tâche(s) {% if current_filter %}trouvée(s){% else %}au total{% endif %}
                </span>
                {% if current_filter %}
                    <a href="{{ path('app_todo_index') }}" class="btn btn-sm btn-outline-secondary ms-2">
                        <i class="fas fa-times"></i> Effacer
                    </a>
                {% endif %}
            </div>
        </div>

        <!-- Liste des tâches -->
        {% if todos|length > 0 %}
            <div class="task-list">
                {% for todo in todos %}
                    <div class="task-item {% if todo.isCompleted %}completed{% endif %}">
                        <div class="task-content">
                            <div class="d-flex align-items-start gap-3">


                                <div class="flex-grow-1">
                                    <div class="task-text {% if todo.isCompleted %}text-decoration-line-through text-muted{% endif %}">
                                        {{ todo.task }}
                                        {% if todo.priority == '5' %}
                                            <span class="badge bg-danger ms-2">
                                                <i class="fas fa-exclamation-circle"></i> Très Haute
                                            </span>
                                        {% elseif todo.priority == '4' %}
                                        <span class="badge bg-danger ms-2">
                                            <i class="fas fa-exclamation-circle"></i> Haute
                                        </span>
                                        {% elseif todo.priority == '3' %}
                                            <span class="badge bg-warning ms-2">
                                                <i class="fas fa-exclamation-triangle"></i> Moyenne
                                            </span>
                                         {% elseif todo.priority == '2' %}
                                            <span class="badge bg-info ms-2">
                                                <i class="fas fa-info-circle"></i> Basse
                                            </span>
                                        {% else %}
                                            <span class="badge bg-info ms-2">
                                                <i class="fas fa-info-circle"></i> Très Basse
                                            </span>
                                        {% endif %}
                                    </div>
                                    
                                    {% if todo.description %}
                                        <p class="task-meta mb-1">{{ todo.description }}</p>
                                    {% endif %}
                                    
                                    <div class="task-meta">
                                        {% if todo.dueDate %}
                                            <span class="me-3">
                                                <i class="fas fa-calendar"></i> 
                                                {{ todo.dueDate|date('d/m/Y H:i') }}
                                                {% if todo.dueDate|date('U') < 'now'|date('U') and not todo.isCompleted %}
                                                    <span class="badge bg-danger ms-1">En retard</span>
                                                {% endif %}
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="task-actions">
                            <span class="badge bg-{{ todo.isCompleted ? 'success' : 'warning' }} me-2">
                                {{ todo.isCompleted ? 'Terminé' : 'En cours' }}
                            </span>
                            
                            <div class="btn-group" role="group">
                                <a href="{{ path('app_todo_show', {'id': todo.id}) }}" 
                                   class="btn btn-sm btn-outline-primary"
                                   data-bs-toggle="tooltip" 
                                   title="Voir les détails">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_todo_edit', {'id': todo.id}) }}" 
                                   class="btn btn-sm btn-outline-warning"
                                   data-bs-toggle="tooltip" 
                                   title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form action="{{ path('app_todo_delete', {'id': todo.id}) }}" method="post" 
                                      class="d-inline" 
                                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette tâche ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ todo.id) }}">
                                    <button type="submit" 
                                            class="btn btn-sm btn-outline-danger"
                                            data-bs-toggle="tooltip" 
                                            title="Supprimer">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!-- Pagination ou informations -->
            <div class="d-flex justify-content-between align-items-center mt-4">
                <div class="text-muted">
                    <small>
                        Affichage de {{ todos|length }} tâche(s)
                    </small>
                </div>
                <a href="{{ path('app_dashboard') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Retour au dashboard
                </a>
            </div>

        {% else %}
            <!-- État vide -->
            <div class="text-center py-5">
                <div class="empty-state">
                    <i class="fas fa-tasks fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">Aucune tâche trouvée</h4>
                    <p class="text-muted mb-4">
                        {% if app.request.get('filter') %}
                            Aucune tâche ne correspond à vos critères de filtrage.
                        {% else %}
                            Commencez par créer votre première tâche !
                        {% endif %}
                    </p>
                    <a href="{{ path('app_todo_new') }}" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus"></i> Créer une tâche
                    </a>
                    {% if app.request.get('filter') %}
                        <a href="{{ path('app_todo_index') }}" class="btn btn-outline-secondary ms-2">
                            <i class="fas fa-times"></i> Effacer les filtres
                        </a>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
// Activation des tooltips Bootstrap
var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
    return new bootstrap.Tooltip(tooltipTriggerEl)
});

// Auto-submit des checkboxes avec feedback
document.querySelectorAll('.form-check-input').forEach(checkbox => {
    checkbox.addEventListener('change', function() {
        const form = this.closest('form');
        const submitBtn = form.querySelector('button[type="submit"]');
        
        if (submitBtn) {
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
        }
        
        form.submit();
    });
});
</script>
{% endblock %}