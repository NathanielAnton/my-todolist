{% extends 'base.html.twig' %}

{% block title %}{{ todo.task }} - Ma Todo List{% endblock %}

{% block body %}
<div class="todo-container">
    <div class="todo-card">
        <!-- En-tête avec navigation -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <a href="{{ path('app_todo_index') }}" class="btn btn-outline-secondary btn-sm mb-2">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
                <h1 class="mb-0"><i class="fas fa-eye"></i> Détails de la tâche</h1>
            </div>
            <div class="btn-group">
                <a href="{{ path('app_todo_edit', {'id': todo.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Modifier
                </a>
                <form method="post" action="{{ path('app_todo_delete', {'id': todo.id}) }}" 
                    onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette tâche ?');"
                    class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ todo.id) }}">
                    <button class="btn btn-danger">
                        <i class="fas fa-trash"></i> Supprimer
                    </button>
                </form>
            </div>
        </div>

        <!-- Carte de détail -->
        <div class="content-card">
            <div class="card-body">
                <!-- En-tête de la tâche -->
                <div class="d-flex justify-content-between align-items-start mb-4">
                    <div>
                        <h2 class="mb-2 {% if todo.isCompleted %}text-decoration-line-through text-muted{% endif %}">
                            {{ todo.task }}
                        </h2>
                        <div class="d-flex gap-2 flex-wrap">
                            <span class="badge bg-{{ todo.isCompleted ? 'success' : 'warning' }}">
                                <i class="fas fa-{{ todo.isCompleted ? 'check-circle' : 'clock' }}"></i>
                                {{ todo.isCompleted ? 'Terminée' : 'En cours' }}
                            </span>
                            {% if todo.priority == 'high' %}
                                <span class="badge bg-danger">
                                    <i class="fas fa-exclamation-circle"></i> Haute priorité
                                </span>
                            {% elseif todo.priority == 'medium' %}
                                <span class="badge bg-warning">
                                    <i class="fas fa-exclamation-triangle"></i> Priorité moyenne
                                </span>
                            {% else %}
                                <span class="badge bg-info">
                                    <i class="fas fa-info-circle"></i> Priorité basse
                                </span>
                            {% endif %}
                            {% if todo.dueDate and todo.dueDate|date('U') < 'now'|date('U') and not todo.isCompleted %}
                                <span class="badge bg-danger">
                                    <i class="fas fa-exclamation-triangle"></i> En retard
                                </span>
                            {% endif %}
                        </div>
                    </div>
                    
                    
                </div>

                <!-- Grille d'informations -->
                <div class="row">
                    <!-- Description -->
                    <div class="col-md-12 mb-4">
                        <div class="info-section">
                            <h5 class="info-title">
                                <i class="fas fa-align-left"></i> Description
                            </h5>
                            <div class="info-content">
                                {% if todo.description %}
                                    <p class="mb-0">{{ todo.description }}</p>
                                {% else %}
                                    <p class="text-muted mb-0 fst-italic">Aucune description fournie</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <!-- Date d'échéance -->
                    <div class="col-md-6 mb-4">
                        <div class="info-section">
                            <h5 class="info-title">
                                <i class="fas fa-calendar-alt"></i> Date d'échéance
                            </h5>
                            <div class="info-content">
                                {% if todo.dueDate %}
                                    <div class="d-flex align-items-center gap-2">
                                        <span class="fw-bold {{ todo.dueDate|date('U') < 'now'|date('U') and not todo.isCompleted ? 'text-danger' : '' }}">
                                            {{ todo.dueDate|date('d/m/Y à H:i') }}
                                        </span>
                                        {% if todo.dueDate|date('U') < 'now'|date('U') and not todo.isCompleted %}
                                            <i class="fas fa-exclamation-triangle text-danger"></i>
                                        {% endif %}
                                    </div>
                                    {% if todo.dueDate|date('U') < 'now'|date('U') and not todo.isCompleted %}
                                        <small class="text-danger">
                                            Échéance dépassée
                                        </small>
                                    {% endif %}
                                {% else %}
                                    <span class="text-muted fst-italic">Aucune date d'échéance</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <!-- Priorité -->
                    <div class="col-md-6 mb-4">
                        <div class="info-section">
                            <h5 class="info-title">
                                <i class="fas fa-flag"></i> Priorité
                            </h5>
                            <div class="info-content">
                                <span class="fw-bold text-{{ todo.priority == 'high' ? 'danger' : (todo.priority == 'medium' ? 'warning' : 'info') }}">
                                    {{ todo.priority == 'high' ? 'Haute' : (todo.priority == 'medium' ? 'Moyenne' : 'Basse') }}
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Statut -->
                    <div class="col-md-6 mb-4">
                        <div class="info-section">
                            <h5 class="info-title">
                                <i class="fas fa-tasks"></i> Statut
                            </h5>
                            <div class="info-content">
                                <span class="fw-bold text-{{ todo.isCompleted ? 'success' : 'warning' }}">
                                    {{ todo.isCompleted ? 'Terminée' : 'En cours' }}
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}