{% extends 'base.html.twig' %}

{% block title %}Modifier {{ todo.task }} - Ma Todo List{% endblock %}

{% block body %}
<div class="todo-container">
    <div class="todo-card">
        <!-- En-tête avec navigation -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <a href="{{ path('app_todo_index') }}" class="btn btn-outline-secondary btn-sm mb-2">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
                <h1 class="mb-0">
                    <i class="fas fa-edit"></i> Modifier la tâche
                </h1>
            </div>
            {% if todo.id %}
                <div class="btn-group">
                    <a href="{{ path('app_todo_show', {'id': todo.id}) }}" class="btn btn-outline-primary">
                        <i class="fas fa-eye"></i> Voir
                    </a>
                    <form method="post" action="{{ path('app_todo_delete', {'id': todo.id}) }}" 
                        onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette tâche ?');"
                        class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ todo.id) }}">
                        <button class="btn btn-danger">
                            <i class="fas fa-trash"></i> Supprimer
                        </button>
                    </form>
                </div>
            {% endif %}
        </div>

        <!-- Formulaire -->
        <div class="content-card">
            <div class="card-body">
                {{ include('todo/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}