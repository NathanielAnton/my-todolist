{% extends 'base.html.twig' %}

{% block title %}Dashboard - Ma Todo List{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1>Dashboard</h1>
            
            <!-- Statistiques -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card text-white bg-primary">
                        <div class="card-body">
                            <h5 class="card-title">Total</h5>
                            <h2>{{ total_count }}</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white bg-success">
                        <div class="card-body">
                            <h5 class="card-title">Terminées</h5>
                            <h2>{{ completed_count }}</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white bg-warning">
                        <div class="card-body">
                            <h5 class="card-title">En attente</h5>
                            <h2>{{ pending_count }}</h2>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="mb-3">
                <a href="{{ path('app_todo_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nouvelle tâche
                </a>
                <a href="{{ path('app_todo_index') }}" class="btn btn-secondary">
                    <i class="fas fa-list"></i> Voir toutes les tâches
                </a>
            </div>

            <!-- Liste récente -->
            <div class="card">
                <div class="card-header">
                    <h5>Mes tâches récentes</h5>
                </div>
                <div class="card-body">
                    {% if todos|length > 0 %}
                        <div class="list-group">
                            {% for todo in todos|slice(0, 5) %}
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1 {% if todo.isCompleted %}text-decoration-line-through text-muted{% endif %}">
                                                {{ todo.task }}
                                            </h6>
                                            {% if todo.dueDate %}
                                                <small class="text-muted">
                                                    Échéance: {{ todo.dueDate|date('d/m/Y H:i') }}
                                                </small>
                                            {% endif %}
                                        </div>
                                        <div>
                                            <span class="badge bg-{{ todo.isCompleted ? 'success' : 'warning' }}">
                                                {{ todo.isCompleted ? 'Terminé' : 'En cours' }}
                                            </span>
                                            <a href="{{ path('app_todo_edit', {'id': todo.id}) }}" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted">Aucune tâche pour le moment.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}